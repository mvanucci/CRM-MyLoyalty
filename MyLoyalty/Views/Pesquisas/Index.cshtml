@model IEnumerable<MyLoyalty.Models.Pesquisa>

@{
    ViewData["Title"] = "Registro de Pesquisas";
}

<h2>@ViewData["Title"]</h2>

<p>
    
</p>
<br />
<br />
<table class="table">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.atendimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notaVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.accProduto)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.cliente.nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.atendimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notaVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliente.nome)
            </td>
            <td>

                <a asp-action="Details" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Visualizar Pesquisa" asp-route-id="@item.id"><i class="glyphicon glyphicon glyphicon-eye-open"></i></a>
               
            </td>
        </tr>
}
    </tbody>
</table>
